COMMIT;


REM ********** TABLA LIBROS: *************

DROP TABLE LIBROS cascade constraints; 

CREATE TABLE LIBROS (
 TITULO  VARCHAR2(32),
 AUTOR   VARCHAR2(22),
 EDITORIAL VARCHAR2(15), 
 PAGINA  NUMBER(3)
 ) ;

INSERT INTO LIBROS VALUES ('LA COLMENA', 'CELA, CAMILO JOSÉ', 'PLANETA',240);
